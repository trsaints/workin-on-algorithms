{
    "name": "My DevContainer",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:latest",
    "settings": {
        "workbench.colorTheme": "Dracula",
        "terminal.integrated.fontFamily": "JetBrains Mono",
        "terminal.integrated.fontSize": 16,
        "terminal.integrated.shell.linux": "/bin/zsh"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "github.copilot",
        "timonwong.shellcheck",
        "ms-python.python",
        "bierner.markdown-preview-github-styles",
        "ms-vsliveshare.vsliveshare"
    ],
    "postCreateCommand": "sh -c 'wget https://github.com/JetBrains/JetBrainsMono/releases/download/v1.0.4/JetBrainsMono.zip && unzip JetBrainsMono.zip -d /usr/share/fonts && fc-cache -f && sh -c \"$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)\"'"
}
